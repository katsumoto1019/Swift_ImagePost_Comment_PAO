  pod 'ReachabilitySwift'
  pod 'Kingfisher', '~> 6.0'
  pod 'IQKeyboardManagerSwift'
  pod 'SwiftGen'
  pod 'SwiftLocation'

  # Firebase
  
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  pod 'Firebase/RemoteConfig'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Firestore'
  pod 'Firebase/Functions'
  pod 'Firebase/Performance'
  pod 'Firebase/Crashlytics'
  
  # Analytics
  
  pod 'Firebase/Analytics'
  pod 'Amplitude-iOS'

  # Google maps
  
  # REF: https://developers.google.com/ios/guides/cocoapods
  pod 'GooglePlaces', '4.2.0'
  pod 'GoogleMaps', '4.2.0'
  
  # Socials
  
  pod 'FacebookSDK'
  
  # Animation
  
  pod 'Motion'
  
  # UX/UI
  
  pod 'Instructions'
  pod 'CropViewController'
  pod 'CCBottomRefreshControl'
  pod 'NVActivityIndicatorView'
  
  # DEBUG / LOGS

  pod 'BugfenderSDK'

  # OLD
  
  pod 'Payload'
  #pod 'TheTransporter'
  pod 'RocketData'

  target 'Pao PROD' do
    # Pods for Pao UAT
  end
end
